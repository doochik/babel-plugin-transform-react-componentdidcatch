{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "array-bracket-spacing": ["error", "always"],
        "no-multiple-empty-lines": "error",
        "object-curly-spacing": ["error", "always"],
        "quotes": ["error", "single", {
            "allowTemplateLiterals": true
        }]
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "15.6.1"
        }
    }
}
